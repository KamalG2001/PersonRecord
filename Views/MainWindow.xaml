<Window x:Class="PersonRecord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonRecord"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <Grid Background="White" Grid.Row="1" Margin="25,40,25,15" >
            <TextBox Name="FilterTextBox" 
                     TextChanged="FilterTextBox_TextChanged" 
                     Height="30" 
                     Width="200" 
                     Margin="25"
                     VerticalAlignment="Top"  
                     HorizontalAlignment="left" 
                     BorderThickness="1" 
                     BorderBrush="#E0E0E0" />
            <ListView Name="UserList" 
                      ItemsSource="{Binding Users}" 
                      BorderBrush="#cdcdcd" 
                      Margin="25,70,25,25" 
                      Padding="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Surname}" Header="Surname"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Age}" Header="Age"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Job}" Header="Job"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Edit" 
               Command="{Binding EditUserDetailsCommand}"
                    HorizontalAlignment="Left" 
                    Margin="632,40,0,0" 
                    VerticalAlignment="Top" 
                    Width="55"/>
            <ContentControl Content="{Binding CurrentView}" />

        </Grid>

    </Grid>
</Window>
